<div class="container my-5 py-3 z-depth-1 rounded">


    <!--Section: Content-->
    <section class="dark-grey-text">
        <h5 class="card-header info-color white-text text-center py-4">
            <strong>Your Card List</strong>
        </h5>
        <!-- Shopping Cart table -->
        <div class="table-responsive">
            <% if(prods.length >0){ %>
            <table class="table product-table mb-0">

                <!-- Table head -->
                <thead class="mdb-color lighten-5">
                    <tr>
                        <th></th>
                        <th class="font-weight-bold">
                            <strong>Product</strong>
                        </th>

                        <th></th>
                        <th class="font-weight-bold">
                            <strong>Price</strong>
                        </th>
                        <th class="font-weight-bold">
                            <strong>QTY</strong>
                        </th>
                        <th class="font-weight-bold">
                            <strong>Amount</strong>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <!-- /.Table head -->

                <!-- Table body -->
                <tbody>

                    <% prods.forEach(product=>{%>
                    <!-- First row -->
                    <tr>
                        <th scope="row">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="img-fluid z-depth-0">
                        </th>
                        <td>
                            <h5 class="mt-3">
                                <strong><%= product.title %></strong>
                            </h5>

                        </td>
                        <td></td>
                        <td>$<%= product.price %></td>
                        <td>
                            <strong><%= product.quantity %></strong>
                        </td>
                        <td class="font-weight-bold">
                            <strong>$<%= (product.price * product.quantity) %></strong>
                        </td>
                        <td>
                            <form action="/delete-cart-item" method="POST">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <button type="submit" class="btn btn-sm btn-danger" data-toggle="tooltip"
                                    data-placement="top" title="Remove item">X
                                </button>

                            </form>
                        </td>
                    </tr>
                    <!-- /.First row -->

                    <%})%>

                    <!-- Fourth row -->
                    <tr>


                        <td colspan="7" class="text-right">

                            <form action="/orders" method="POST">
                                <button type="submit" class="btn btn-primary btn-rounded">Order Now
                                    <i class="fas fa-angle-right right"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <!-- Fourth row -->

                </tbody>
                <!-- /.Table body -->

            </table>
            <% } else {%>
            <center><strong>
                    <h1 class="dispaly-4 my-5 text-warning ">NOTHING HERE</h1>
                </strong></center>
            <%  } %>

        </div>
        <!-- /.Shopping Cart table -->

    </section>
    <!--Section: Content-->


</div>